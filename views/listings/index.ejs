<% layout("/layouts/boilerplate") %>
    <style>
        /* Mobile Scrollable Filter Bar */
@media (max-width: 768px) {

    #filter-wrapper {
        flex-direction: column;
        align-items: flex-start;
        gap: 1rem;
    }

    #filters {
        display: flex;
        flex-wrap: nowrap;        /* <-- Important: items in one line */
        overflow-x: auto;
        gap: 1.2rem;
        padding-bottom: 0.5rem;
        position: relative;       /* <-- Needed for fade effect */
    }

    .filter {
        flex: 0 0 auto;
        margin: 0;                 /* Remove big margins */
        text-align: center;
        display: flex;
        flex-direction: column;
        align-items: center;
        min-width: 70px;           /* Controls width of each item */
    }

    .filter i {
        font-size: 26px;
        margin-bottom: 3px;
    }

    .filter p {
        font-size: 12px;
        margin: 0;
    }

    /* Fade-out effect on right side */
    #filters::after {
        content: "";
        position: absolute;
        top: 0;
        bottom: 0;
        right: 0;
        width: 40px;
        background: linear-gradient(to left, white 60%, transparent);
        pointer-events: none;
    }

    /* Tax toggle box full width */
    .tax-toggle {
        width: 100%;
        justify-content: center;
    }
}


    </style>
    <!-- <h3 class="head">All Listings</h3> -->
    <div id="filter-wrapper">
     <div id="filters">
            <div class="filter">
            <div><i class="fa-solid fa-fire"></i></div>
            <p>Tranding</p>
            </div>
            <div class="filter">
            <div><i class="fa-solid fa-bed"></i></div>
            <p>Room</p>
            </div>
            <div class="filter">
            <div><i class="fa-solid fa-city"></i></div>
            <p>Iconic City</p>
            </div>
            <div class="filter">
            <div><i class="fa-solid fa-fort-awesome"></i></div>
            <p>Castle</p>
            </div>
            <div class="filter">
            <div><i class="fa-solid fa-mountain"></i></div>
            <p>Mountains</p>
            </div>
            <div class="filter">
            <div><i class="fa-solid fa-person-swimming"></i></div>
            <p>Swimming</p>
            </div>
            <div class="filter">
            <div><i class="fa-solid fa-campground"></i></div>
            <p>Camping</p>
            </div>
            <div class="filter">
            <div><i class="fa-solid fa-cow"></i></div>
            <p>Farming</p>
            </div>
            <div class="filter">
            <i class="fa-solid fa-umbrella-beach"></i>
            <p>Beach</p>
            </div>
            <div class="filter">
            <i class="fa-solid fa-ferry"></i>
            <p>Ships
            </p>
            </div>
        </div>
            
            <div>
                <div class="tax-toggle">
                    <div class="form-check form-switch form-check-reverse">
                        <input class="form-check-input" type="checkbox" role="switch" id="switchCheckDefault">
                        <label class="form-check-label" for="switchCheckDefault">Display total after taxes</label>
                    </div>
                </div>
            </div>
        </div>


        
  

    <div class="row row-cols-1 row-cols-md-2 row-cols-lg-3 g-4">
        <% for(let listing of allListings) { %>
        <div class="col">
            <a href="/listings/<%=listing._id%>" class="listing-link text-decoration-none">
                <div class="card h-100 listing-card">
                    <img src="<%=listing.image.url%>" class="card-img-top img-fluid" alt="listing-img" style="height: 20rem; object-fit: cover;">
                    <div class="card-img-overlay">Tap to View More</div>
                    <div class="card-body">
                        <p class="card-text">
                            <b><%= listing.title %></b><br>
                            &#8377; <%= listing.price ? Number(listing.price).toLocaleString("en-IN") : "0" %>/night
                            <i class="tax-info">&nbsp; &nbsp;+18% GST</i>
                        </p>
                    </div>
                </div>
            </a>
        </div>
        <% } %>
    </div>


    <script>
        let taxSwitch = document.getElementById("switchCheckDefault");
        taxSwitch.addEventListener("click",()=>{
            let taxInfo = document.getElementsByClassName("tax-info");
            for(info of taxInfo){
                if(info.style.display != "inline"){
                    info.style.display = "inline";
                } else{
                    info.style.display = "none";
                }
                
            }
        });

    </script>