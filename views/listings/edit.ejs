<% layout("/layouts/boilerplate") %>
<body>
    <!-- <h3>Id of your listing  To Update the Listing: <%= listing.id %></h3> -->
    <div class="row">
    <div class="col-8 offset-2">
    <form action="/listings/<%=listing._id%>?_method=PUT" method="post" class="needs-validation" novalidate enctype="multipart/form-data">
        <h3>Edit the Listing</h3>
        <div class="mb-3">
            <label for="title" class="form-label">Title: </label>
            <input type="text" name="listing[title]" class="form-control" value="<%=listing.title%>" placeholder="title" required>
            <div class="valid-feedback">
                Title looks good!
            </div>
        </div>
        <div class="mb-3">
            <label for="description" class="form-label">Description:</label>
            <textarea name="listing[description]" class="form-control" required><%=listing.description%></textarea>
                <div class="invalid-feedback">
                Please Enter the valid Description
            </div>
        </div>
        <div class="mb-3">
            Original Listing Image:
            <br>
            <img src="<%=smallURL%>" width="250px" height="200px">
        </div>
        <div class="mb-3">
            <label for="image" class="form-label">Upload New Image :</label>
            <input type="file" name="listing[image][url]" class="form-control">
        </div>
        <div class="row"> 
        <div class="mb-3 col-md-4">
            <label for="price" class="form-label">Price:</label>
            <input type="Number" name="listing[price]"   class="form-control"  value="<%=listing.price%>" required>
            <div class="invalid-feedback">
                Please Enter the valid Price
            </div>  
        </div>
        <div class="mb-3 col-md-8">
            <label for="country" class="form-label">Country:</label>
            <input type="text" name="listing[country]" value="<%=listing.country%>" class="form-control" required>
            <div class="invalid-feedback">
                Please Enter the valid Country
            </div>
        </div>
        </div>


        <div class="mb-3">
            <label for="location" class="form-label">Location::</label>
            <input type="text" name="listing[location]" class="form-control"  value="<%=listing.location%>" required>
            <div class="invalid-feedback">
                Please Enter the valid Location
            </div>
        </div>

        <div class="mb-3">
            <button class="btn edit-btn mt-3">Edit</button>
        </div>
    </form>
    </div>
    </div>
</body>
